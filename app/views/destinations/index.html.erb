<p id="notice"><%= notice %></p>

<h1>Destinations</h1>

<table class= "table">
  <thead>
    <tr>
      <th>City</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.city %></td>
        <td><%= destination.country %></td>
        <td><%= link_to 'Show', destination, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_destination_path(destination), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', destination, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Destination', new_destination_path, class: 'btn btn-success' %>
